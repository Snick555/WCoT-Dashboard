<li>
  <%= gravatar_for user %>
  <%= link_to user.name, user %>
  <% if user.account_admin?%>
    <strong class="role account-admin"> Account Admin </strong>
  <% end %><br>
  <%= user.email %><br>
  <%= user.phone %>
  <% if current_user.account_admin? && !current_user?(user) %>
    <%= link_to image_tag("delete.png", :size => "15x15", alt: "Remove"), user, method: :delete,
                              class: "delete-button",
                              data: { confirm: "You sure?" } %>
<% end %>
</li>
