<% provide(:title, 'New Meeting') %>
<% provide(:desc, 'Schedule a New Meeting') %>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@meeting) do |f| %>

      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :agenda %>
      <%= f.text_area :agenda %>

      <%= f.label :date %>
      <%= f.text_field :date %>

      <div class="row">
        <div class="span3 timepicker">
          <%= f.label :starts_at %>
          <%= f.text_field :starts_at %>
        </div>
        <div class="span3 timepicker">
          <%= f.label :ends_at %>
          <%= f.text_field :ends_at %>
        </div>
      </div>

      <center>
        <%= f.submit "Create Meeting", class: "btn btn-large btn-primary" %>
      </center>

    <% end %>
  </div>
</div>
