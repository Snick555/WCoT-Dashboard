<%= select_year(Date.today.year, { :start_year => 2017, :end_year => Date.today.year }, { :id => "filter-year" }) %>
<%= select("contribution", "month", {}, {}, { :id => "filter-month" }) %>

<% @current_contributions = Contribution.where(:month => Date.today.strftime("%b"), :year => Date.today.strftime("%Y")) %>

<% if @current_contributions.length > 0 %>
    <h2> Recent contributions in this month </h2>
<% end %>
<ol class="current_contributions">
  <%= render partial: 'shared/current_contribution', collection: @current_contributions %>
</ol>
